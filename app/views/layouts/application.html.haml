!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "LearningRails"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fluid-top.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Learning Rails", root_path, :class => "brand"
          .container.nav-collapse
            %ul.nav
              %li.dropdown
                %a.dropdown-toggle{:href => "#", :"data-toggle" => "dropdown"}
                  Chapters
                  %b.caret
                %ul.dropdown-menu
                  - Chapter.all.each do |chapter|
                    %li= link_to chapter.title, chapter_pages_path(chapter)
              %li= link_to "Blog", posts_path
              %li= link_to "About", "about"
            %ul.nav.pull-right
              %li
                = link_to "Sign in", sign_in_path unless signed_in?
                = link_to 'Sign out', sign_out_path, method: :delete if signed_in?
      = yield :breadcrumbs

    #content.container-fluid
      .row-fluid
        - if params[:controller] == "pages"
          .span2.bs-docs-sidebar
            %ul.nav.nav-list.bs-docs-sidenav.affix
              - @chapter.pages.each do |page|
                %li
                  - if page == @page
                    = link_to page.title, "#", :class => "btn-primary"
                  - else
                    = link_to chapter_page_path(@chapter, page) do
                      = page.title
                      %i.icon-chevron-right
          .span10
            = bootstrap_flash
            = yield
        - else
          .span12
            = bootstrap_flash
            = yield

      %footer
        %p &copy; Reuben Mallaby 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
