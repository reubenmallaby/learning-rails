- content_for :breadcrumbs do
  .pull-right
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_chapter_page_path(@chapter, @page), :class => 'btn btn-link'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), chapter_page_path(@chapter, @page), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-link'

  %ul.breadcrumb
    %li
      = link_to "Home", chapters_path
      %span.divider
        %i.icon-arrow-right
    %li
      = link_to @page.chapter.title, chapter_pages_path(@page.chapter)
      %span.divider
        %i.icon-arrow-right
    %li=@page.title
  %br

.page-header
  %h1= @page.title

#page= sanitize(RedCloth.new(@page.content, [:filter_html, :filter_styles]).to_html)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), chapter_pages_path(@chapter), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_chapter_page_path(@chapter, @page), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), chapter_page_path(@chapter, @page), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
