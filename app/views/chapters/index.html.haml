- model_class = Chapter
.pull-right= link_to t('.new', :default => t("helpers.links.new")), new_chapter_path, :class => 'btn btn-primary'
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%br

- @chapters.each do |chapter|
  .chapter.well  
    .pull-right
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_chapter_path(chapter), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), chapter_path(chapter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    %h2= link_to chapter.title, chapter_pages_path(chapter)
    %ul
      - chapter.pages.each do |page|
        %li= link_to page.title, chapter_page_path(chapter, page)
    %br

